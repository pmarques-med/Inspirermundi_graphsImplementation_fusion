<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bloomidea.inspirers.PeopleActivity">

    <include
        android:id="@+id/layout"
        layout="@layout/layout_top" />

    <LinearLayout
        android:id="@+id/share_with_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66cc99"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="38dp"
            android:layout_height="46dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="46dp"
                android:layout_centerInParent="true"
                android:paddingRight="@dimen/activity_horizontal_margin_div_2"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/asset11" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.bloomidea.inspirers.customViews.MorebiRoundedMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/share_with_doctor_btn"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/morebiRounded_11pt"
                    android:typeface="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.bloomidea.inspirers.customViews.MorebiRoundedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/share_with_doctor_text"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/morebiRounded_6pt"
                        android:typeface="normal" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/add_warrior_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66cc99"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="38dp"
            android:layout_height="46dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="46dp"
                android:layout_centerInParent="true"
                android:paddingRight="@dimen/activity_horizontal_margin_div_2"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/add_warrior_icon" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.bloomidea.inspirers.customViews.MorebiRoundedMediumTextView
                    android:id="@+id/evaluation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/add_warrior"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/morebiRounded_11pt"
                    android:typeface="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/eval_info_points">

                    <com.bloomidea.inspirers.customViews.MorebiRoundedTextView
                        android:id="@+id/morebiRoundedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/find_search_warriors"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/morebiRounded_6pt"
                        android:typeface="normal" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:background="#eeeeee">
    </FrameLayout>

</LinearLayout>
