<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/overlay_back"
        android:background="#B3000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/item_all_rounded_corners"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:orientation="horizontal"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.bloomidea.inspirers.customViews.MorebiRoundedTextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:id="@+id/no_internet_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="normal"
                    android:text="@string/overlay_med_name"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="20sp" />

                <com.bloomidea.inspirers.customViews.MorebiRoundedAutoCompleteEditText
                    android:layout_marginTop="@dimen/activity_horizontal_margin_x2"
                    android:id="@+id/overlay_medicine_name_editText"
                    android:completionThreshold="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_back"
                    android:ellipsize="end"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/text_color_333333"
                    android:textColorHint="@color/text_color_999999"
                    android:hint="@string/overlay_med_name_hint"
                    android:textSize="@dimen/morebiRounded_8pt"
                    android:typeface="normal" />

                <LinearLayout
                    android:layout_marginTop="@dimen/activity_horizontal_margin_x2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.bloomidea.inspirers.customViews.MorebiRoundedTextView
                        android:layout_marginRight="@dimen/activity_horizontal_margin_div_2"
                        android:padding="@dimen/activity_horizontal_margin_div_2"
                        android:layout_weight="0.5"
                        android:id="@+id/btn_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:typeface="normal"
                        android:text="@string/cancel"
                        android:textAlignment="center"
                        app:textAllCaps="true"
                        android:textStyle="normal"
                        android:textColor="@android:color/white"
                        android:background="#cccccc"
                        android:textSize="20sp" />

                    <com.bloomidea.inspirers.customViews.MorebiRoundedTextView
                        android:layout_marginLeft="@dimen/activity_horizontal_margin_div_2"
                        android:padding="@dimen/activity_horizontal_margin_div_2"
                        android:layout_weight="0.5"
                        android:id="@+id/btn_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:typeface="normal"
                        android:text="@string/overlay_med_create"
                        android:textAlignment="center"
                        app:textAllCaps="true"
                        android:textStyle="normal"
                        android:textColor="@android:color/white"
                        android:background="#33cc99"
                        android:textSize="20sp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>